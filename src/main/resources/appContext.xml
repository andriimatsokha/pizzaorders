<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
        
	<bean name="pizzaRepository" init-method="init" class="ua.pp.kaeltas.pizzaorders.repository.TestPizzaRepository"/>
	<bean name="orderRepository" class="ua.pp.kaeltas.pizzaorders.repository.TestOrderRepository"/>
    
    <bean name="orderService" class="ua.pp.kaeltas.pizzaorders.service.SimpleOrderService">
    	<constructor-arg  ref="pizzaRepository"/>
    	<constructor-arg ref="orderRepository"/>
    </bean>    
    
</beans>